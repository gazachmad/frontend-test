{% extends('layout/app.html.twig') %}

{% block content %}
<!-- ======= About Section ======= -->
<section class="hero text-montserrat pt-4 pb-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 my-auto mb-5 px-4 mb-lg-auto">
                <h1 class="text-montserrat-bold mb-3">PHP Hosting</h1>
                <h2 class="mb-4">Cepat, handal, penuh dengan modul PHP yang Anda butuhkan</h2>
                <p class="mb-2"><i class="bi bi-check-circle-fill green-icon"></i> &nbsp; Solusi PHP untuk performa
                    query yang lebih cepat.</p>
                <p class="mb-2"><i class="bi bi-check-circle-fill green-icon"></i> &nbsp; Konsumsi memori yang lebih
                    rendah.</p>
                <p class="mb-2"><i class="bi bi-check-circle-fill green-icon"></i> &nbsp; Support PHP 5.3, PHP 5.4, PHP
                    5,5, PHP 5.6, PHP 7</p>
                <p class="mb-2"><i class="bi bi-check-circle-fill green-icon"></i> &nbsp; Fitur enkripsi lonCube dan
                    Zend Guard Loaders</p>
            </div>
            <div class="col-lg-6 px-4 my-auto">
                <img class="img-fluid" width="100%" src="assets/svg/illustration%20banner%20PHP%20hosting-01.svg"
                    alt="PHP7" />
            </div>
        </div>
    </div>
</section><!-- End About Section -->
<hr class="divider">
<section class="pt-4 pb-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 mx-auto text-center">
                <div class="row">
                    <div class="col-lg-4 mt-auto mx-auto">
                        <img class="img-fluid pb-4 pb-lg-5" src="assets/images/img-zendguard.jpg" alt="zendguard" />
                        <p class="mb-3">PHP Zend Guard Loader</p>
                    </div>
                    <div class="col-lg-4 mx-auto">
                        <img class="img-fluid pb-2" src="assets/images/img-composer.jpg" alt="composer" />
                        <p class="mb-3">PHP Composer</p>
                    </div>
                    <div class="col-md-4 mt-auto mx-auto">
                        <img class="img-fluid pb-4 pb-lg-5" src="assets/images/img-ioncube.jpg" alt="ioncube" />
                        <p class="mb-3">PHP ionCube Loader</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 my-5 mx-auto text-center">
                <h4 class="text-montserrat-bold">Paket Hosting Singapura yang Tepat</h4>
                <h5 class="">Diskon 40% + Domain dan SSL Gratis untuk Anda</h5>
            </div>
        </div>
        <div class="row">
            {% for item in data %}
            <div class="col-md-6 col-lg-3 mb-5 p-sm-0">
                <div class="card text-center{{item.best_seller?' border-blue':''}}">
                    <div class="best-seller{{item.best_seller?'':' d-none'}}">
                        <img src="assets/images/tag-best-seller.png" alt="best-seller">
                    </div>
                    <div class="card-header p-0 {{item.best_seller?'bg-blue text-white':'bg-white'}}">
                        <h5 class="mb-0 py-2 text-montserrat-bold">{{item.title}}</h5>
                        <hr class="divider mt-0">
                        <p class="mb-2"><s>Rp {{ item.price_original|number_format(0,',','.') }}</s></p>
                        <p class="d-flex flex-wrap align-content-start justify-content-center">Rp<span
                                class="ms-1 text-montserrat-bold fs-40 l-40">{{item.price//1000}}</span><span
                                class="text-montserrat-bold">.{{item.price%1000}}</span>/bln</p>
                        <hr class="divider m-0">
                        <p class="my-3 text-roboto-light"><span
                                class="text-roboto-bold">{{item.jumlah_pengguna|number_format(0,',','.')}}</span>
                            Pengguna Terdaftar</p>
                    </div>
                    <div class="card-body p-0">
                        <p class="mb-1 mt-4 text-roboto-bold">{{item.feature_title}}</p>
                        {% for item1 in item.feature %}
                        <p class="mb-2 text-roboto-light">{{item1|parse_detail|raw}}</p>
                        {% endfor %}
                        <button type="button"
                            class="btn {{item.best_seller?'btn-primary':'btn-outline-secondary'}} rounded-25 text-montserrat-bold py-2 px-4 mt-4 mb-4">{{item.button}}</button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-10 mt-5 mx-auto text-center">
                <h3 class="mb-4">Powerful dengan Limit PHP yang Lebih Besar</h3>
            </div>
            <div class="col-lg-6 text-center">
                <table class="table table-striped text-roboto" style="width: 100%">
                    <tbody>
                        <tr>
                            <td><i class="bi bi-check-circle-fill green-icon"></i></td>
                            <td>max execution time 300s</td>
                        </tr>
                        <tr>
                            <td><i class="bi bi-check-circle-fill green-icon"></i></td>
                            <td>max execution time 300s</td>
                        </tr>
                        <tr>
                            <td><i class="bi bi-check-circle-fill green-icon"></i></td>
                            <td>php memory limit 1024 MB</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6 text-center">
